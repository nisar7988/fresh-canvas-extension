{
  "manifest_version": 3,
  "name": "Fresh Canvas - New Tab",
  "version": "1.0.0",
  "description": "Beautiful rotating wallpapers for your new tab page",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage", "tabs", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"]
}